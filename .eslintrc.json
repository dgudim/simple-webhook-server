{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double",
            {
                "allowTemplateLiterals": true
            }
        ],
        "no-cyonsole": "off",
        "keyword-spacing": [
            "error",
            {
                "before": true
            }
        ],
        "space-before-blocks": [
            "error"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "no-var": "warn",
        "semi": [
            "error",
            "always"
        ],
        "semi-style": "error",
        "no-extra-semi": "error"
    }
}
